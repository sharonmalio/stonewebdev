// This provides CSS classes for the submit button:
$submit = $this->form->get('submit');
$submit->setAttribute('class', 'btn btn-primary btn-block');

echo $this->form()->openTag($this->form);

?>

<div class="form-group">
    <?= $this->formLabel($dates) ?>
    <?= $this->formElement($dates) ?>
    <?= $this->formElementErrors()->render($dates, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($time) ?>
    <?= $this->formElement($time) ?>
    <?= $this->formElementErrors()->render($time, ['class' => 'help-block']) ?>
</div>

<?php
echo $this->formHidden($appnt_id);

echo $this->formSubmit($submit);

echo $this->form()->closeTag();

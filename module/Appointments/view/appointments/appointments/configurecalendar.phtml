$this->form->prepare();

// This provides a default CSS class and placeholder text for the dates element:
$appnt_id = $this->form->get('appointment_id');

$dates = $this->form->get('appointment_date');
$dates->setAttribute('class', 'form-control');
// $dates->setAttribute('placeholder', 'dates');

$time = $this->form->get('appointment_time');
$time->setAttribute('class', 'form-control');

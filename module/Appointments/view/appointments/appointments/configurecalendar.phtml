<div id="form" class="margin" ></div>

<?php
$title = 'Dates';
$this->headTitle($title);

?>
<head>
<div style = "color: black; font-size:30px; text-align: center;">Choose the Dates and the Time</div>
</head>
<?php

// $this->form->setAttribute('action', $this->url('appointments', ['appointments' => 'configurecalendar'
